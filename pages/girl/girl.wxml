<!--index.wxml-->
<view class="container" bindtouchend="end" bindtouchstart="start">
  <view  class="newsinfo"  wx:for="{{newsList}}" wx:key="{{item.ctime}}">
    <image class="newsinfo-avatar" src="{{item.picUrl}}" bindtap="gotoLink" ></image>
    <text class="newsinfo-title">{{item.title}}</text>
    <view class="newsinfo-auth">
      <text class="newsinfo-description">{{item.description}}</text>
      <text class="newsinfo-ctime">{{item.ctime}}</text>
    </view>
  </view>
</view>